{
	"env": {
		"es6": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"extends": [
		"airbnb-base",
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"import/extensions": "off",
		"@typescript-eslint/camelcase": "off"
	},
	"settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".d.ts"]
      }
    }
	}
}
